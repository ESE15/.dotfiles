[user]
    signingKey = ~/.ssh/ese15/id_rsa.pub
	email = junghoon450@gmail.com
	name = ESE15
[credential]
    helper = store
[pager]
    branch = false
    log = true
[diff]
    tool = vimdiff
[core]
    editor = vim
[init]
    defaultBranch = main
[fetch]
    prune = true
[status]
    showStash = true
[alias]
    lg = log --graph --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(bold white)— %an%C(reset)%C(bold yellow)%d%C(reset)' --abbrev-commit --date=relative
    alg = log --graph --all --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(bold white)— %an%C(reset)%C(bold yellow)%d%C(reset)' --abbrev-commit --date=relative
    gla = log --graph --oneline --decorate --all
    sw = switch
    c = checkout
    cb = checkout -b
    cv = commit -v
